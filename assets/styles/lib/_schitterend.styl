move_in($direction = 'left') {
  $start-amount = 200%
  transform: translate($start-amount, 0);
  animation: move_in 1s 1;
  transform: translate(0, 0);
  opacity: 0
  animation-delay: 2s;
  @-webkit-keyframes move_in {
    0% {
      opacity: 0
      transform: translate($start-amount, 0);
    }
    100% {
      opacity: 1
      transform: translate(0, 0);
    }
  }
}

reverse-color($this_bg_color = $color_three, $this_color = $color_one) {
  background: $this_bg_color
  color: $this_color
  h1, h2, h3, h4, h5, h6, p, table, blockquote {
    color: $this_color
  }
  {$alllink} {
    color: $this_color
  }
  .pager li a,
  button,
  input[type="submit"] {
    background: $this_color
    color: $this_bg_color
  }
  ::selection {
    background: lighten($color_one, 60%);
  }
}
.inverted {
  reverse-color()
}
