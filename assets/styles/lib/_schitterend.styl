set-border( $coordinates = 0 0 0 0, $style = solid, $color = #000000 ) {
  $top = $coordinates[1]
  $right = $coordinates[2]
  $bottom = $coordinates[3]
  $left = $coordinates[4]

  if $top is a 'unit' {
    border-top: $top $style $color
  }
  if $right is a 'unit' {
    border-right: $right $style $color
  }
  if $bottom is a 'unit' {
    border-bottom: $bottom $style $color
  }
  if unitless is a 'unit' {
    border-left: $left $style $color
  }
}

