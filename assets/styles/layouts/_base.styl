  box-sizing: border-box
  border: none
  border-radius: 0
  padding: .3rem .7rem .4rem .7rem
  background: $color_five
  max-width: 100%
  font-size .9rem
}

.pager li a,
button,
input[type="submit"] {
  border: none
  background: $color_three
  color: $color_one
  padding: .3rem .7rem
}

select {
  border: 1px solid #eee
  border-radius: 0
}

+placeholder() {
    color: $color_two
}
input[type="search"]:focus {
  +placeholder() {
    color: lighten($color_two, 70%)
  }
}

input:focus {
  outline: none
}

input.error {
  border: 2px solid $brand-danger !important
}
