/*******
* NAVIGATION
********/
// bootstrap alters
.navbar {
  margin-bottom: 0
}
.navbar-default,
.navbar-default .navbar-collapse, .navbar-default .navbar-form {
  border: none
}

ul.nav {
  no-list-style()
  //// depth 0+
  li {
    {$alllink} {
      text-decoration: none
    }
    // parents & open
    &.current-menu-ancestor,
    &.current-menu-parent,
    &.current-menu-parent,
    &.current_page_ancestor {
      > a,
      > a:hover {
        background-color: $dropdown-link-active-bg
        color: $dropdown-link-active-color
      }
    }

    //// depth 1+
    ul.dropdown-menu {
      padding-top: 0
      padding-bottom: 0
      border: none
      box-shadow: $shadow_one
    }
    //// depth 1
    > ul.dropdown-menu {
      //
    }
    //// depth 2+
    > ul.dropdown-menu li ul {
      left: -2em // if border;
      background: $color_one_alt
      margin-top: 0
      padding-left: 13px
      +above($break_one) {
        padding-left: 0
      }
    }
  }
  //// depth 0
  > li {
    //
  }
}

/*******
* FIXES AND OTHER
********/

.media_embed iframe {
  max-width: 100%
}

//// Fix for Firefox
input::-moz-focus-inner {
  padding: 0
  border: 0
}

.caret.left-caret {
  margin-right: 5px
  margin-left: 0px
}

// fix depth 2 dropdowns
.navbar-default ul.navbar-nav li ul.dropdown-menu li {
  &.current-menu-ancestor,
  &.current-menu-parent,
  &.current-menu-parent,
  &.current_page_ancestor,
  &.open {
    > a,
    > a:hover {
      color: $dropdown-link-active-color
    }
  }
}

#infscr-loading {
  margin-top: 1rem
  margin-bottom: 1rem
  em {
    color: $color_three
  }
  > img {
    display: none
  }
}

